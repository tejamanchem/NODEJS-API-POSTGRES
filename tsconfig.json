{
  "compilerOptions": {
    "experimentalDecorators":true,                     
    "target": "es6",                               
    "module": "commonjs",                           
    "outDir": "./dist",                             
    "rootDir": "./src",                             
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true, 
    "emitDecoratorMetadata": true,   
    "lib": ["es5", "es6", "dom"]          
  },
  "exclude":[
    "./node_modules"
  ],
  "include": ["/**/*.ts"]
}

